<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ViewModels.OwnerSalesFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/OwnerSalesTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/Divider" />

    <!-- 3-dot menu icon -->
    <ImageButton
        android:id="@+id/OwnerSalesMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/menu"
        android:contentDescription="Menu"
        android:padding="12dp"
        android:layout_margin="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="@+id/OwnerSalesTvTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider (optional) -->
    <View
        android:id="@+id/Divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/OwnerSalesTvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RestaurantSalesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/Divider"/>

</androidx.constraintlayout.widget.ConstraintLayout>